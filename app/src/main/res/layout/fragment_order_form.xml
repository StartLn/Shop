<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragement.OrderFormFragment">

    <!--订单页面-->
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_groupnote"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_102"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/layer"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_all_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/common_icon_all_list_n"
                android:gravity="center"
                android:text="全部订单"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/btn_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/common_icon_pay_n"
                android:gravity="center"
                android:text="代付款"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/btn_take_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/common_icon_receive_n"
                android:gravity="center"
                android:text="代收货"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/btn_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/commom_icon_comment_n"
                android:gravity="center"
                android:text="代评价"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/btn_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/common_icon_finish_n"
                android:gravity="center"
                android:text="完成"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_60">
        </FrameLayout>
    </LinearLayout>
</FrameLayout>