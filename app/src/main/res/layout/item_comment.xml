<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--商品评价子布局-->
    <TextView
        android:text="评价"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_4"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_30"
        android:layout_height="2dp"
        android:background="#dc3c3c">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:text="当前评论总数"/>
        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_8"
            android:textColor="#666666"
            android:text="17万+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/comment_headimage"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_16"
                fresco:placeholderImage="@mipmap/loading"/>
            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/comment_headimage"
                android:layout_toLeftOf="@id/circle_date"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:text="HelloWrod"/>
            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_10"
                android:textColor="#666666"
                android:text="HelloWrod"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/comment_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            android:text="Hello"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/comment_images"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_292"
                android:layout_height="@dimen/dp_292"
                fresco:placeholderImage="@mipmap/fait_to_load"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>