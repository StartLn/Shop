                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_text"
                android:textColor="#666666"
                android:paddingBottom="@dimen/dp_3"
                android:textSize="@dimen/sp_14"
                android:text="我的圈子"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/my_icon_foot_n"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_text"
                android:textColor="#666666"
                android:paddingBottom="@dimen/dp_3"
                android:textSize="@dimen/sp_14"
                android:text="我的足迹"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/my_icon_wallet_n"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_text"
                android:textColor="#666666"
                android:paddingBottom="@dimen/dp_3"
                android:textSize="@dimen/sp_14"
                android:text="我的钱包"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/my_icon_address_n"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_text"
                android:textColor="#666666"
                android:paddingBottom="@dimen/dp_3"
                android:textSize="@dimen/sp_14"
                android:text="我的收货地址"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/image_head_portrait"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_102"
        android:src="@mipmap/headportraitfour"/>
