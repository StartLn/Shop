<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragement.DetailsFragment"
    android:padding="@dimen/dp_15">

    <!--商品详情页面=fragment-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_35"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.stx.xhb.xbanner.XBanner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/detalis_image"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_250"
                android:layout_centerHorizontal="true"
                app:isAutoPlay="false">

            </com.stx.xhb.xbanner.XBanner>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/price_lin"
                android:layout_below="@id/detalis_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detalis_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品价钱"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#ff0000"/>
                <TextView
                    android:id="@+id/detalis_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已售1200件"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/detalis_name"
                android:layout_below="@id/price_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="#000000"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/detalis_weighnt"
                android:layout_below="@id/detalis_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重量"
                android:textColor="#000000"
                android:textSize="@dimen/sp_15"/>
            <LinearLayout
                android:layout_below="@id/detalis_weighnt"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_height="match_parent">
                <TextView
                    android:text="商品详情"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="2dp"
                    android:background="#dc3c3c"></View>
                <WebView
                    android:id="@+id/detalis_web"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></WebView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/details_relative_addshoppingcar"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/dp_80"
        android:padding="@dimen/dp_5">
        <ImageView
            android:id="@+id/btn_cart"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/common_btn_add_n" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/details_relative_pay"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/dp_30"
        android:padding="@dimen/dp_5">
        <ImageView
            android:id="@+id/btn_buy"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/common_btn_buy_n" />

    </RelativeLayout>
</FrameLayout>