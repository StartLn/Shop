<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <!--商品详情页面，商品子布局-->
    <TextView
        android:text="商品"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_4"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_30"
        android:layout_height="2dp"
        android:background="#dc3c3c">
    </View>
    <com.stx.xhb.xbanner.XBanner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shop_xbanner"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_274"
        android:layout_gravity="center_horizontal"
        app:isAutoPlay="false">
    </com.stx.xhb.xbanner.XBanner>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_14"
        android:id="@+id/price_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品价钱"
            android:textSize="@dimen/sp_20"
            android:textColor="#ff0000"/>
        <TextView
            android:id="@+id/shop_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="已售1200件"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名字"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重量"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/shop_weight"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.089kg"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

</LinearLayout>
